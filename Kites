#include <iostream>

using namespace std;

int main() {
	int n, i, j, k;
	cin >> n;
	for (i = 0; i < n; i++)
	{
		for (k = 2 * ((n - i) - 1); k > 0; k--)
		{
			cout << " ";
		}
		for (j = 0; j < 2 * i + 1; j++)
		{
			cout << "* ";
		}
		cout << "\n";
	}
	for (i = n; i > 1; i--)
	{
		for (k = 2 * (n - i + 1); k > 0; k--)
		{
			cout << " ";
		}
		for (j = 0; j < 2 * (i - 2) + 1; j++)
		{
			cout << "* ";
		}
		cout << "\n";
	}

}
